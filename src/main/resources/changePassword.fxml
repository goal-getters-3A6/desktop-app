<AnchorPane fx:id="registerpane" prefHeight="404.0" prefWidth="501.0" style="-fx-background-color: #fffaed;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.esprit.controllers.ChangePasswordController">
    <children>
        <VBox fx:id="registervbox" layoutX="122.0" layoutY="124.0" prefHeight="192.0" prefWidth="276.0" spacing="10.0">
            <children>
                <Label prefHeight="18.0" prefWidth="78.0" text="Mot de passe">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
            <PasswordField fx:id="newpassword" />
                <Label fx:id="label" prefHeight="18.0" prefWidth="139.0" text="Confimer mot de passe">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
                </Label>
            <PasswordField fx:id="confirmpassword" />
            </children>
        </VBox>
        <HBox prefHeight="100.0" prefWidth="520.0" style="-fx-background-color: #004369;">
            <children>
                <HBox prefHeight="100.0" prefWidth="581.0" spacing="1.0">
                    <children>
                        <ImageView fx:id="log" fitHeight="98.0" fitWidth="152.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@imgs/logo.png" />
                            </image>
                        </ImageView>
                    </children>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </HBox>
            </children>
        </HBox>
        <Button fx:id="submit" layoutX="201.0" layoutY="327.0" mnemonicParsing="false" onAction="#changePassword" prefHeight="30.0" prefWidth="119.0" style="-fx-background-color: #db1f48;" text="OK" />
    </children>
</AnchorPane>
